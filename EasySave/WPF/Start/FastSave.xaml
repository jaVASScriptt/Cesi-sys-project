<Page x:Class="Easysave.FastSave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Easysave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="save_rapide">
        
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                
                <TextBlock Grid.Row="0" TextWrapping="Wrap" TextAlignment="Center" Text="Sauvegarde rapide" Foreground="White" VerticalAlignment="Top" Width="641" Height="55" FontSize="30" Margin="0,30,0,0" FontWeight="Bold" Background="{x:Null}"/>

                <TextBlock Grid.Row="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Donnez le nom de la sauvegarde " Foreground="White" VerticalAlignment="Top" FontSize="20" Background="{x:Null}"/>
                <TextBox Grid.Row="2" TextAlignment="Center" Foreground="White" FontSize="25" Background="#FF07044A" BorderBrush="#FF001A6C"/>
                <TextBlock Grid.Row="3" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Donnez le chemin d'acces des dossiers à copier " Foreground="White" VerticalAlignment="Top" FontSize="20" Background="{x:Null}"/>
                <TextBox Grid.Row="4" TextAlignment="Center" Foreground="White" FontSize="25" Background="#FF07044A" BorderBrush="#FF001A6C"/>
                <TextBlock Grid.Row="5" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Donnez le chemin d'acces où les dossiers vont se copier " Foreground="White" VerticalAlignment="Top" FontSize="20" Background="{x:Null}"/>
                <TextBox Grid.Row="6" TextAlignment="Center" Foreground="White" FontSize="25" Background="#FF07044A" BorderBrush="#FF001A6C"/>
                <TextBlock Grid.Row="7" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Quel type de sauvegarde souhaitez-vous effectuer ?" Foreground="White" VerticalAlignment="Top" FontSize="20" Background="{x:Null}"/>
                
                <Grid Grid.Row="8" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Row="0" Grid.Column="0" Content="Complète" Foreground="White" HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="180" FontSize="25" Background="#FF07044A"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="Différentielle" Foreground="White" HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="178" FontSize="25" Background="#FF07044A"/>
                    
                </Grid>
                
                <Button Grid.Row="9" Content="Validate" Foreground="White" HorizontalAlignment="Center" Height="66" VerticalAlignment="Top" Width="180" FontSize="25" Margin="0,10,0,0" Background="#FF07044A"/>
                
            </Grid>
</Page>
