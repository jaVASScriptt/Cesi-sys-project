<Window x:Class="EasySave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        xmlns:local="clr-namespace:EasySave"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
        
        <Grid Background="#FF001A6C">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
        
                <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="EasySave" FontSize="72" FontWeight="Bold" Foreground="White" FontFamily="Rockwell Extra Bold"/>
                
                <Button Grid.Row="0" Width="50" Height="50" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnClickExit">
                        <Image Source="Images\exit_logo.png"/>
                </Button>
                
                <Button Grid.Row="0" Width="50" Height="50" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnClickHome">
                        <Image Source="Images\home_logo.png" Height="30"/>
                </Button>
        
                <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Rectangle Grid.Column="0" Fill="#FF07044A"/>
                        <Button Grid.Column="0" Content="Save" FontSize="30" Foreground="White" VerticalAlignment="Top" Width="175" Height="85" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0 0 0 0" Click="BtnClickSave"/>
                        <Button Grid.Column="0" Content="Languages" FontSize="30" Foreground="White" VerticalAlignment="Top" Width="175" Height="85" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0 100 0 0" RenderTransformOrigin="0.521,-0.061" Click="BtnClickLanguage"/>
                        <Button Grid.Column="0" Content="Paramètres" FontSize="30" Foreground="White" VerticalAlignment="Top" Width="175" Height="85" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0 200 0 0" Click="BtnClickLogsAndState"/>
                        
                        <Frame Grid.Column="1" x:Name="Main" NavigationUIVisibility="Hidden"/>
                </Grid>
        </Grid>
        
</Window>
